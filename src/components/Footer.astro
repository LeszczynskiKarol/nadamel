const currentYear = new Date().getFullYear();
---

<footer class="bg-wood-900 text-white mt-20">
  <div class="section-container py-12">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- Company Info -->
      <div>
        <div class="flex items-center gap-3 mb-4">
          <div class="w-10 h-10 gradient-primary rounded-lg flex items-center justify-center">
            <span class="font-bold text-lg">N</span>
          </div>
          <div>
            <div class="font-display text-xl font-bold">Nadamel</div>
            <div class="text-xs text-wood-300">Usługi Stolarskie</div>
          </div>
        </div>
        <p class="text-wood-300 text-sm leading-relaxed">
          Profesjonalne usługi stolarskie. Rozkrój i oklejanie płyt, drzwi wewnętrzne, fronty meblowe, lakierowanie.
        </p>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="font-display text-lg font-bold mb-4">Usługi</h3>
        <ul class="space-y-2">
          <li>
            <a href="/ciecie-rozkroj-plyt" class="text-wood-300 hover:text-white transition-colors text-sm">Cięcie i rozkrój płyt</a>
          </li>
          <li>
            <a href="/oklejanie-plyt-meblowych" class="text-wood-300 hover:text-white transition-colors text-sm">Oklejanie płyt</a>
          </li>
          <li>
