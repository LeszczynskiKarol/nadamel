<section id="onas" class="py-20 bg-white">
  <div class="section-container">
    <!-- Section Header -->
    <div class="text-center max-w-3xl mx-auto mb-16">
      <div class="inline-block bg-wood-100 text-wood-800 px-4 py-2 rounded-full text-sm font-semibold mb-4">
        Dlaczego my?
      </div>
      <h2 class="font-display text-4xl md:text-5xl font-bold text-gray-900 mb-6">
        Co zyskujesz, wybierając Nadamel?
      </h2>
      <p class="text-xl text-gray-600">
        Dzięki wieloletniemu doświadczeniu w produkcji mebli doskonale znamy potrzeby stolarzy. 
        Stworzyliśmy miejsce, w którym wiele problemów po prostu znika.
      </p>
    </div>

    <!-- Benefits Grid -->
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {benefits.map((benefit) => (
        <div class="group">
          <div class="flex items-start gap-4">
            <div class="w-12 h-12 gradient-primary rounded-xl flex items-center justify-center flex-shrink-0 shadow-lg group-hover:shadow-xl transition-shadow">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={benefit.icon}></path>
              </svg>
            </div>
            <div class="flex-1">
              <h3 class="font-display text-lg font-bold text-gray-900 mb-2">
                {benefit.title}
              </h3>
              <p class="text-gray-600 leading-relaxed">
                {benefit.description}
              </p>
            </div>
          </div>
        </div>
      ))}
    </div>

    <!-- Stats -->
    <div class="mt-20 gradient-wood rounded-3xl p-12 text-white">
      <div class="grid md:grid-cols-4 gap-8 text-center">
        <div>
          <div class="text-5xl font-bold mb-2">10+</div>
          <div class="text-wood-200">Lat doświadczenia</div>
        </div>
        <div>
          <div class="text-5xl font-bold mb-2">500+</div>
          <div class="text-wood-200">Zadowolonych klientów</div>
        </div>
        <div>
          <div class="text-5xl font-bold mb-2">48 godz.</div>
          <div class="text-wood-200">Średni czas realizacji</div>
        </div>
        <div>
          <div class="text-5xl font-bold mb-2">99%</div>
          <div class="text-wood-200">Poziom satysfakcji</div>
        </div>
      </div>
    </div>
  </div>
</section>